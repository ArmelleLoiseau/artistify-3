<h1 class="title">
    <span>All labels</span>
    <a href="/dashboard/label/create" class="link label"><i class="fa fa-plus"></i></a>
</h1>
<hr>

{{#unless labels.length}}
<p>
    sorry, no labels available yet.
</p>
{{else}}
<table class="table">
    <thead class="head">
        <th class="cell">logo</th>
        <th class="cell">name</th>
        <th class="cell">country</th>
        <th class="cell">city</th>
        <th class="cell">street</th>
        <th class="cell">street num</th>
        <th class="cell">zip</th>
        <th class="cell">update</th>
        <th class="cell">delete</th>
    </thead>

    <tbody class="body">
        {{#each labels}}
        <tr class="row">
            <td class="cell logo" style="background-image: url({{this.logo}})"></td>
            <td class="cell name">{{this.name}}</td>
            <td class="cell country">{{this.country}}</td>
            <td class="cell city">{{this.city}}</td>
            <td class="cell band">{{this.street}}</td>
            <td class="cell band">{{this.streetNumber}}</td>
            <td class="cell band">{{this.zipcode}}</td>
            <td class="cell band">
                <a href="/dashboard/label/update/{{this._id}}">
                    <i class="fa fa-pen"></i>
                </a>
            </td>
            <td class="cell band">
                <a href="/dashboard/label/delete/{{this._id}}">
                    <i class="fa fa-trash"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/unless}}